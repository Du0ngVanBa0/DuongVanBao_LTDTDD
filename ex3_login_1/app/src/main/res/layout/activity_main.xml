<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/raidenshogun" />

    <EditText
        android:id="@+id/editTextText1"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="#008080"
        android:drawableLeft="@drawable/ic_user"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@id/editTextText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#008080"
        android:drawableLeft="@drawable/ic_password"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        android:textSize="20dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="500px"
        android:layout_height="100px"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextText2"
        app:cardBackgroundColor="#F6546A"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Register"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF0404"
        android:text="21115053120103_DuongVanBao"
        android:textColor="#FFFFFF" />

</RelativeLayout>